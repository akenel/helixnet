# --- Application Metadata ---
PROJECT_NAME="HelixNet Core API"
API_V1_STR="/api/v1"
SECRET_KEY="super-secret-key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
VERSION="1.0.0"
# --- Database Configuration (PostgreSQL) ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=helix_db
POSTGRES_USER=helix_user
POSTGRES_PASSWORD=helix_pass
DB_POOL_SIZE=5
DB_ECHO=False

# --- Message Broker (RabbitMQ for Celery) ---
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin

# --- Cache / Celery Backend (Redis) ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- Object Storage (MinIO) ---
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_BUCKET=helixnet
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_ROOT_USER=minioadmin 
MINIO_ROOT_PASSWORD=minioadmin
# --- PostgreSQL Admin (PGAdmin) Credentials ---
# Note: These variables were in your error output but not explicitly in your Settings class.
# They are common for docker-compose setups and are included here with standard admin credentials.
PGADMIN_DEFAULT_EMAIL=admin@helix.net
PGADMIN_DEFAULT_PASSWORD=admin

FLOWER_BROKER_URL=amqp://admin:admin@rabbitmq:5672//
# --- Async URL used by FastAPI ---
POSTGRES_ASYNC_URL=postgresql+asyncpg://helix_user:helix_pass@postgres:5432/helix_db

# --- Sync URL (used for Alembic or test setup) ---
POSTGRES_SYNC_TEST_DSN=postgresql://helix_user:helix_pass@postgres:5432/helix_db
