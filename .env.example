# --- Application Metadata ---
PROJECT_NAME="HelixNet Core API"
API_V1_STR="/api/v1"
SECRET_KEY="super-secret-key"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Database Configuration (PostgreSQL) ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=helix_db
POSTGRES_USER=helix_user
POSTGRES_PASSWORD=helix_pass
DB_POOL_SIZE=5
DB_ECHO=False

# --- Message Broker (RabbitMQ for Celery) ---
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin

# --- Cache / Celery Backend (Redis) ---
REDIS_HOST=redis
REDIS_PORT=6379

# --- Object Storage (MinIO) ---
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_BUCKET=helixnet
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_ROOT_USER=minioadmin 
MINIO_ROOT_PASSWORD=minioadmin
# --- PostgreSQL Admin (PGAdmin) Credentials ---
# Note: These variables were in your error output but not explicitly in your Settings class.
# They are common for docker-compose setups and are included here with standard admin credentials.
PGADMIN_DEFAULT_EMAIL=admin@helix.net
PGADMIN_DEFAULT_PASSWORD=admin

FLOWER_BROKER_URL=amqp://admin:admin@rabbitmq:5672//

# --- Production/Async URL (used by the main app for async operations) ---
POSTGRES_ASYNC_URL="postgresql+asyncpg://helix_user:helix_pass@host:port/dbname"
# --- Testing/Sync URL (used ONLY by conftest.py for synchronous table creation/deletion) ---
# NOTE: This should usually point to a dedicated "test" database name to avoid nuking real data!
POSTGRES_SYNC_TEST_DSN="postgresql://helix_user:helix_pass@127.0.0.1:5432/test_dbname"